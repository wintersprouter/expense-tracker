<div class="row my-5">
  <div class="col-md-6 col-lg-5 m-auto " style="width:420px">
    <div class="card card-body">
      <h2 class="text-center mt-3">登入</h2>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">信箱</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{email}}"
            autocomplete=on>
        </div>
        <div class="form-group">
          <label for="password">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-info btn-block">登入</button>
        <a href="/auth/facebook" class="btn btn-primary btn-block">Facebook 登入</a>
      </form>
      <p class="lead mt-4">
        沒有帳號？ <a href="/users/register">註冊</a>
      </p>
    </div>
  </div>
</div>